{
    "name": "__MSG_appName__",
    "version": "0.0.2",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/chromereload.js",
            "scripts/background.js",
            "scripts/commands/index.js",
            "scripts/commands/bookmark.js",
            "scripts/commands/screenshot.js",
            "scripts/commands/search.js",
            "scripts/listener.js"
        ]
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "bookmarks",
        "clipboardRead",
        "clipboardWrite",
        "contentSettings",
        "history",
        "notifications",
        "pageCapture",
        "storage",
        "webNavigation",
        "webRequest",
        "*://*.google.com/"
    ],
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "scripts/contentscript.js"
            ],
            "run_at": "document_end",
            "all_frames": false
        }
    ],
    "omnibox": {
        "keyword": "OMNIBOX-KEYWORD"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon-19.png",
            "38": "images/icon-38.png"
        },
        "default_title": "mimi",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "images/icon-48.png"
    ],
    "commands": {
        "activate-mimi": {
            "suggested_key": {
                "default": "Ctrl+Shift+1",
                "windows": "Ctrl+Shift+1",
                "mac": "Command+Shift+1",
                "chromeos": "Ctrl+Shift+1",
                "linux": "Ctrl+Shift+1"
            },
            "description": "Activate Mimi"
        },
        "activate-mimi-2": {
            "suggested_key": {
                "default": "Ctrl+Y",
                "mac": "Ctrl+Y"
            },
            "description": "Activate Mimi2"
        }
    }
}
